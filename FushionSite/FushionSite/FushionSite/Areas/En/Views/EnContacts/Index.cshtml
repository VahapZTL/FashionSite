            <div style="width: 450px; text-align: right;"><a href="//api.yandex.com.tr/maps/index.xml" target="_blank" style="color: #1A3DC1; font: 13px Arial, Helvetica, sans-serif;"></a></div>
            <script type="text/javascript">function fid_143055362253668587907(ymaps) { var map = new ymaps.Map("ymaps-map-id_143055362253668587907", { center: [36.922087, 37.583374], zoom: 13, type: "yandex#map" }); map.controls.add("zoomControl").add("mapTools").add(new ymaps.control.TypeSelector(["yandex#map", "yandex#satellite", "yandex#hybrid"])); map.geoObjects.add(new ymaps.Placemark([36.922087, 37.583374], { balloonContent: "Fatih YAZICI<br>Tel: 05302919263" }, { preset: "twirl#blueDotIcon" })); };</script>
