@model FashionSiteEntityLibrary.AdminInformationEntity.AdminInformationTable

@{
    Layout = null;
}
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="user-scalable=no, initial-scale=1, maximum-scale=1, minimum-scale=1, width=device-width, height=device-height" />
    <meta name="HandheldFriendly" content="true" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>Admin - Giriş</title>
    <meta name="description" content="" />
    <meta name="keywords" content="" />
    <meta name="author" content="" />
    <script src="~/Content/Js/jquery-1.8.2.min.js"></script>
    <script src="~/Content/Js/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Content/Js/jquery.validate.min.js"></script>
    <script src="~/Content/Js/jquery.validate.unobtrusive.min.js"></script>
    <link href="~/Content/Css/reset.css" rel="stylesheet" />
    <link href="~/Content/Css/style.css" rel="stylesheet" />
    <!--[if IE]>
        <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
</head>
<body class="mor">
    <section class="giris">
        <div class="container410">
            <div class="row">
                <div class="girisyap">
                    <div class="logo">
                        <img src="/Areas/Administrator/Images/logo.png" style="height: 100px; padding-left: 0px;"alt="">
                    </div>
                    @using (Ajax.BeginForm("Control", "Login", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "divError" }))
                    {
                        <div class="inputlar">
                            <center><div id="divError" style="height:10px; width:auto;"></div></center>
                            <div>
                                <label for="kullaniciadi">
                                    <img src="/Areas/Administrator/Images/kadi.png" alt="">
                                </label>
                                @Html.TextBoxFor(an => an.AdminName, new { id = "kullaniciadi", placeholder = "Kullanıcı adı" })
                            </div>
                            <div>
                                <label for="sifre">
                                    <img src="/Areas/Administrator/Images/sifre.png" alt="">
                                </label>
                                @Html.PasswordFor(ap => ap.AdminPassword, new { id = "kullaniciadi", placeholder = "Şifre" })
                            </div>
                        </div>
                        <button>Giriş Yap</button>
                    }
                </div>
            </div>
        </div>
    </section>
    <script type="text/javascript" src="~/Content/Js/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="~/Content/Js/jquery.min.js"><\/script>')</script>
    <script type="text/javascript" src="~/Content/Js/smoothscroll.js"></script>
    <script type="text/javascript" src="~/Content/Js/main.js"></script>
</body>
</html>
