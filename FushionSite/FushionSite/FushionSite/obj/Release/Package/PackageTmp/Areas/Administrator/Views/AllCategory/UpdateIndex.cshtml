@model KagiEntityLibrary.CategoryEntity.CategoriesTable
@{
    ViewBag.Title = "Kategori Güncelle";
    Layout = "~/Areas/Administrator/Views/AdministratorLayout.cshtml";
}
<section class="content">
    <div class="contentici">
        @using (Html.BeginForm("Update", "AllCategory", FormMethod.Post, new { @class = "ac-checkbox ac-checkmark yazi_form" }))
        {
            <div class="yazibaslik">
                @Html.TextBoxFor(cn => cn.CategoryName, new { placeholder = "Kategori Başlığı" })
                @Html.HiddenFor(ci => ci.CategoryId)
            </div>

            <div class="sidebar">
                <div class="sidebaric">
                    <div class="sidebarbaslik">KATEGORİLER</div>
                    <ul class="ac-custom">
                        @foreach (var item in (IEnumerable<KagiEntityLibrary.CategoryEntity.CategoriesTable>)ViewBag.SendCategories)
                        {
                            <li>
                                <input id="kategori_1" name="kategoriler" type="radio">
                                <label for="kategori_1">@item.CategoryName</label>
                                <div class="link">/administrator/newCategory/delete/@item.CategoryId</div>
                            </li>
                        }
                    </ul>
                </div>
                <button>DÜZENLE</button>
            </div>
        }
        <div class="popup"></div>
    </div>
</section>
